import request from '@/utils/request'

export function list(data) {
  return request({
    url: '/admin/{{name}}',
    method: 'get',
    params: data
  })
}

export function create(data) {
  return request({
    url: '/admin/{{name}}',
    method: 'post',
    data
  })
}

export function show(id, params) {
  return request({
    url: `/admin/{{name}}/${id}`,
    method: 'get',
    params
  })
}

export function update(id, data) {
  return request({
    url: `/admin/{{name}}/${id}`,
    method: 'put',
    data
  })
}

export function destroy(id) {
  return request({
    url: '/admin/{{name}}/' + id,
    method: 'delete'
  })
}

