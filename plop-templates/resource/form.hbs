<template>
  <el-form ref="form" v-loading="formLoading" label-width="100px" :rules="rules" :model="form">
    <el-form-item label="名称" prop="name">
      <el-input v-model="form.name" />
    </el-form-item>
    <el-form-item>
      <el-button type="primary" @click="handleSubmit">保存</el-button>
      <el-button @click="handleBack">取消</el-button>
    </el-form-item>
  </el-form>
</template>

<script>
import { get, post } from '@/api'

export default {
  name: '{{ properCase name }}Form',
  props: {
    id: {
      type: [String, Number],
      default: ''
    }
  },
  data() {
    return {
      form: {
        name: ''
      },
      formLoading: false,
      rules: {
        name: [{ required: true, message: '名称必填', trigger: 'blur' }]
      },
      info: {}
    }
  },
  created() {
    if (this.id) {
      this.getInfo()
    }
  },
  methods: {
    getInfo() {
      get(`admin-api/geo/position/${this.id}/info`).then(res => {
        if (res.code === 200) {
          this.info = res.data
          this.form = {
            name: this.info.name
          }
        } else {
          this.$message.error(res.message)
        }
      }).catch(error => {
        console.log(error)
      })
    },
    handleSubmit() {
      this.$refs['form'].validate((valid) => {
        if (valid) {
          if (this.id) {
            this.handleUpdate()
          } else {
            this.handleCreate()
          }
        }
      })
    },
    handleUpdate() {
      const params = JSON.parse(JSON.stringify(this.form))
      this.formLoading = true
      post(`admin-api/geo/position/${this.id}/update`, params).then(res => {
        this.formLoading = false
        if (res.code === 200) {
          this.$message.success('修改成功')
          this.handleBack()
        } else {
          this.$message.error(res.message)
        }
      }).catch(error => {
        this.formLoading = false
        console.log(error)
      })
    },
    handleCreate() {
      const params = JSON.parse(JSON.stringify(this.form))
      this.formLoading = true
      post(`admin-api/geo/position/create`, params).then(res => {
        this.formLoading = false
        if (res.code === 200) {
          this.$message.success('添加成功')
          this.handleBack()
        } else {
          this.$message.error(res.message)
        }
      }).catch(error => {
        this.formLoading = false
        console.log(error)
      })
    },
    handleBack() {
      this.$router.back()
    }
  }
}
</script>
